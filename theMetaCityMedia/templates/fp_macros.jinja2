{% macro video(video) -%}
<div class="mediaPerview video">
    <h1><a href="/video/{{ id }}">{{ title }}</a></h1>
        <img src="https://assets.themetacity.com/video/postcards/{{ video.postcard.url }}"
             title="{{ video.postcard.title }}"
             alt="{{ video.postcard.alt_text }}">
    <h3>Published: {{ video.date_published }}</h3>
    <div class="about">
        {% autoescape false %}{{ video.about }}{% endautoescape %}
    </div>
    <ul class="meta">
        <li class="running_time">{{ video.time }}</li>
        <li class="mime_types">{% for mt in video.mimetypes %} {{ mt }} {% endfor %}</li>
        <li class="sizes">{{ video.get_smallest_filesize() }} {% if video.get_smallest_filesize() !=  video.get_largest_filesize() %} {{ - video.get_largest_filesize() }} {% endif %}</li>
        <li class="tracks">{% for track in video.tracks %} {{ track }} {% endfor %}</li>
        <li class="licence">{{ licence }}</li>
    </ul>
</div>
{%- endmacro %}