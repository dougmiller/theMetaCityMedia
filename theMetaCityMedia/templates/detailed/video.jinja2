{% extends "detailed/media_base.html" %}

{% block title %}{{ video.title }}{% endblock %}
{% block includes %}
    <script src="/static/javascript/video-build.js"></script>
{% endblock %}

{% block media %}
<h1><a href="/video/{{ video.id }}">{{ video.title }}</a></h1>
<div id="videoContainer">
    <video height="{{ video.get_height() }}"
           width="{{ video.get_width() }}"
           controls
           data-filename="{{ video.file_name }}"
           data-startposter="{{ video.has_start_poster }}"
           data-endposter="{{ video.has_end_poster_url }}"
           preload="auto"
           id="detailed_video">

        {% for source in video.files %}
            <source src="https://assets.themetacity.com/video/{{ video.file_name }}.{{ source.extension }}"
                    type='video/{{ source.mime_type }}; codecs="
                            {{ source.video_codec }}{% if source.audio_codec != 'nill' %},{{ source.audio_codec }}{% endif %}"' />
        {% endfor %}

        {% for track in video.tracks %}
            <track src="https://assets.themetacity.com/video/tracks/{{ video.file_name }}.{{ track.src_lang }}.{{ track.type }}.vtt"
                   srclang="{{ track.src_lang }}" kind="{{ track.type }}" label="{{ track.label }}">
        {% endfor %}
    </video>

    <input type="range" id="playProgress" min="0" max="1000" value="0">
    <div id="videoControls">
        <img id="playPauseButton" class="button" src="/static/images/smallplay.svg" title="Play" alt="Play/pause video">
        <p id="timeSpan"><span id="currentTimeSpan">00:00</span> / <span id="runningTimeSpan">{{ video.running_time }}</span></p>
        <img id="fullscreenButton" class="button" src="/static/images/fullscreen.svg" title="Go to fullscreen. If there is a higher resolution video available it will load that, otherwise it will upscale the current video." alt="Button to open video in fullscreen">
        <img id="tracksButton" class="button" src="/static/images/tracks.svg" title="Change track options" alt="Button to open track options">
        <img id="soundButton" class="button" src="/static/images/sound.svg" title="Change sound options" alt="Button to change sound options">
        {% if video.tracks|length %}
            <ul id="tracksList">
                {% for track in video.tracks %}
                    <li><a href="http://assets.localcity.com/video/tracks/{{ video.file_name }}{{ track.get_url() }}">{{ track.get_description() }}</a></li>
                {% endfor %}
            </ul>
        {% else %}
            <p>No tracks.</p>
        {% endif %}
    </div>
</div>
<div>
    <h2>Downloads:</h2>

    <h3>Files:</h3>
    <ul>
        {% for file in video.files %}
            {% if file.is_fullscreen %}
                <li>
                    <a href="http://assets.localcity.com/video/{{ video.file_name }}.fullscreen.{{ file.extension }}">{{ video.file_name }}.fullscreen.{{ file.extension }}</a><br>
                    {{ file.resolution }} {{ file.Video_Codec }} {{ file.get_audio_codec_if_present() }} {{ file.human_readable_size() }}
                </li>
            {% else %}
                <li>
                    <a href="http://assets.localcity.com/video/{{ video.file_name }}.{{ file.extension }}">{{ video.file_name }}.{{ file.extension }}</a>
                    <br>
                    {{ file.resolution }}
                    {{ file.video_codec }}{{ file.get_audio_codec_if_present() }} {{ file.human_readable_size() }}
                </li>
            {% endif %}
        {% endfor %}
    </ul>

    <h3>
        {% if not video.has_start_poster %}
            No start poster,
        {% else %}
            <a href="http://assets.localcity.com/video/startposters/{{ video.file_name }}.startposter.svg">Start poster</a>
        {% endif %}

        {% if not video.has_end_poster %}
            No end poster
        {% else %}
            <a href="http://assets.localcity.com/video/endposters/{{ video.file_name }}.endposter.svg">End poster</a>
        {% endif %}
    </h3>

    {% if video.tracks %}
        <h3>Tracks</h3>
        <ul>
            {% for track in video.tracks %}
                <li><a href="http://assets.localcity.com/video/tracks/{{ video.file_name }}{{ track.get_url() }}">{{ track.get_description() }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <h3>No tracks</h3>
    {% endif %}

</div>
<div id="inforhs" itemscope itemtype="http://schema.org/VideoObject">
    <h2 itemprop="name">{{ video.title }}</h2>

    <h3>Published:
        <time itemprop="uploadDate" datetime="{{ video.date_published }}">{{ video.date_published }}</time>
    </h3>
    <div class="aboutContainer" itemprop="description">
        {% autoescape false %}
        {{ video.about }}
        {% endautoescape %}
    </div>
</div>
{% endblock %}

{% block licence %}{{ video.title }}{% endblock %}
